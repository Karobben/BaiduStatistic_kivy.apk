					id: token_sub
					background_color: 0.2745098, 0.5098039, 0.7058824,  .7
					halign: 'left'
			        text: "搜索词"

			BoxLayout:
				size_hint: 1, 3
				orientation: 'vertical'
		        ScrollView:
		            do_scroll_x: True
					do_scroll_y: True
					Label:
						id: key_words
		                halign: "left"
		                color: 0, 1, 1, .8
		                size_hint_y: None
		                height: self.texture_size[1]
		                text_size: self.width, None
		                padding: 10, 10
						text: 'loading'


		# Therid Layer 2
		BoxLayout:
			size_hint: 1, 10
			padding: self.width * 0.005
			spacing: self.width * 0.005


