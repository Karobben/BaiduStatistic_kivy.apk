		spacing: self.width * 0.005
		size_hint: 1, 1
		orientation: 'vertical'

		# Therid Layer 1
		BoxLayout:
			padding: self.width * 0.005
			spacing: self.width * 0.005

			size_hint: 1, 7
			orientation: 'vertical'

			BoxLayout:

				size_hint: 1, 1
				orientation: 'vertical'
				canvas:
					Color:
						rgba: 0.2745098, 0.5098039, 0.7058824,  .7
					Rectangle:
						pos: self.pos
						size: self.size
